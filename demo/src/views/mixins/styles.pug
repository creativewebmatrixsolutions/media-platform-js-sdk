mixin styles
    style.
        body {
            width: 1000px;
            margin: 0 auto;
            font-family: sans-serif;
        }

        .content {
            padding: 0 20px 20px 20px;
            box-shadow: 0 2px 4px 0 rgba(16, 30, 42, 0.18);
            display: flex;
        }

        .group {
            width: 100%;
        }

        .preview {
            width: 100%;
            text-align: center;
        }

        .demo-group {
            margin-top: 14px;
        }

        .response {
            display: flex;
            width: 100%;
            justify-content: space-between;
        }

        .response .highlight {
            width: 100%;
        }

        .response .output {
            margin: 14px 0 0 30px;
            width: 500px;
            align-self: flex-start;
        }

        .response .output img {
            width: 100%;
            height: 100%;
        }

        .btn {
            padding: 5px 20px;
            border-radius: 18px;
            font-size: 12px;
            background-color: #3899ec;
            color: white;
            border: 0;
            outline: none;
            cursor: pointer;
            margin-top: 10px;
        }

        .btn:hover {
            background-color: #2f9fff;
        }

        .text-input {
            padding: 5px 20px;
            border-radius: 0px;
            font-size: 12px;
            background-color: #f8f5ec;
            color: black;
            border: none;
            outline: none;
            cursor: text;
            margin-top: 10px;
        }

        .path-to-file {
            margin-left: 10px;
            font-size: 12px;
        }

        input[type="file"] {
            display: none;
        }

        .code-snippet {
            font: 100% courier, monospace;
            white-space:pre;
            border: 1px solid #ccc;
            overflow: auto;
            overflow-x: scroll;
            padding: 0 1em 1em 1em;
            margin: 1em auto 2em auto;
            background: #fff7f0;
            color: #000
        }

        /*.btn-pad {*/
            /*margin-top: 10px;*/
        /*}*/

        .result {
            min-height: 100px;
            max-height: 200px;
            min-width: 300px;
            border: 1px solid #dcdcdc;
            border-radius: 5px;
            padding: 2px;
        }

        .pre {
            min-height: 100px;
            min-width: 300px;
            outline: 1px solid #ccc;
            padding: 5px; margin: 5px;
        }

        #upload-result-container {
           display: inline-block;
           min-height: 100px;
           max-height: 200px;
           min-width: 300px;
           border: 1px solid #dcdcdc;
           border-radius: 5px;
           padding: 2px;
        }

        #result-container img {
            max-height: 200px;
            border-radius: 5px;
        }

        .settings {
            font-size: 12px;
            width: 300px;
            margin: 5px auto;
            text-align: left;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: left;
        }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        /* Change the link color to #111 (black) on hover */
        li a:hover {
            background-color: #111;
        }

        .string {
            color: green;
        }

        .number {
            color: darkorange;
        }

        .boolean {
            color: blue;
        }

        .null {
            color: magenta;
        }

        .key {
            color: red;
        }

        .highlight {
            position: relative;
            margin-top: 14px;
            padding: 30px 14px 14px;
            border: none;
            border-radius: 0;
            overflow: auto;
            color: #333333;
            background: #f8f5ec;
        }

        .highlight:after {
            position: absolute;
            top: 0;
            right: 0;
            left: 0;
            padding: 3px 7px;
            font-size: 12px;
            font-weight: bold;
            color: #c2c0bc;
            background-color: #f1ede4;
            content: "Code";
        }

        .highlight-response:after {
            content: "Response";
        }
