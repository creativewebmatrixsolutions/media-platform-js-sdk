mixin styles
    style.
        body {
            width: 800px;
            margin: 0 auto;
            font-family: sans-serif;
        }

        .content {
            padding: 0 20px 20px 20px;
            box-shadow: 0 2px 4px 0 rgba(16, 30, 42, 0.18);
            display: flex;
        }

        .group {
            display: flex;
        }

        .btn {
            padding: 5px 20px;
            border-radius: 18px;
            font-size: 12px;
            background-color: #3899ec;
            color: white;
            border: 0;
            outline: none;
            cursor: pointer;
        }

        .btn:hover {
            background-color: #2f9fff;
        }

        .upload {
            margin-top: 10px;
        }

        #upload-result-container {
           min-height: 100px;
           max-height: 200px;
           min-width: 300px;
           border: 1px solid #dcdcdc;
           border-radius: 5px;
           padding: 2px;
        }

        #upload-result-container img {
            max-height: 200px;
            border-radius: 5px;
        }

        ul {
            list-style-type: none;
            margin: 0;
            padding: 0;
            overflow: hidden;
            background-color: #333;
        }

        li {
            float: left;
        }

        li a {
            display: block;
            color: white;
            text-align: center;
            padding: 14px 16px;
            text-decoration: none;
        }

        /* Change the link color to #111 (black) on hover */
        li a:hover {
            background-color: #111;
        }

